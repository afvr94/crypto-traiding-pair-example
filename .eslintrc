{
    "extends": ["airbnb", "plugin:prettier/recommended", "plugin:jsx-a11y/recommended", "plugin:react/jsx-runtime", "plugin:@next/next/recommended"],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "babelOptions": {
        "presets": ["@babel/preset-react"]
      }
    },
    "plugins": ["prettier", "jsx-a11y", "react-hooks", "jest-dom", "testing-library"],
    "ignorePatterns": ["_app.js"],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "new-cap": 0,
      "no-restricted-syntax": 0,
      "class-methods-use-this": 0,
      "react/state-in-constructor": 0,
      "react/jsx-props-no-spreading": 0,
      "react/jsx-curly-newline": 0,
      "react/forbid-prop-types": 0,
      "react/destructuring-assignment": 0,
      "react/jsx-one-expression-per-line": 0,
      "import/prefer-default-export": 0,
      "func-names": 0,
      "react/function-component-definition": [2, { "namedComponents": "arrow-function" }],
      "react/no-typos": 0,
      "no-under-dangle": 0,
      "no-use-before-define": 0,
      "prettier/prettier": ["error"]
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    }
  }